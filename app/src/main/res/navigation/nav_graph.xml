<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.qonversion.android.app.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_permissionsFragment"
            app:destination="@id/permissionsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_offeringsFragment"
            app:destination="@id/offeringsFragment" />
    </fragment>
    <fragment
        android:id="@+id/permissionsFragment"
        android:name="com.qonversion.android.app.PermissionsFragment"
        android:label="fragment_permissions"
        tools:layout="@layout/fragment_permissions" />
    <fragment
        android:id="@+id/offeringsFragment"
        android:name="com.qonversion.android.app.OfferingsFragment"
        android:label="fragment_offerings"
        tools:layout="@layout/fragment_offerings" />
</navigation>